# Contributor: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=clementine
pkgver=1.4.0rc1
pkgrel=1
pkgdesc='A modern music player and library organizer'
url=https://www.clementine-player.org/
license=(GPL)
arch=(x86_64)
depends=(chromaprint crypto++ glew gst-plugins-base-libs libcdio libgpod liblastfm-qt5 libmtp libmygpo-qt5 protobuf qt5-x11extras)
makedepends=(boost cmake qt5-tools sparsehash)
optdepends=(
  'gst-plugins-base: "Base" plugin libraries'
  'gst-plugins-good: "Good" plugin libraries'
  'gst-plugins-bad: "Bad" plugin libraries'
  'gst-plugins-ugly: "Ugly" plugin libraries'
  'gst-libav: Libav plugin'
  'gvfs: Various devices support'
)
source=("https://github.com/clementine-player/Clementine/releases/download/$pkgver/$pkgname-$pkgver.tar.xz")

sha256sums=('96ba2f5f3ece47b2c1065e980dcc37ada93ea42cf37b794ee804514ce4a65459')

prepare() {
  mkdir -p build
  
  patch -p1 < $startdir/mainwindow.patch
  patch -p1 < $startdir/mainwindow_ui.patch
  patch -p1 < $startdir/cle.patch
}

build() {
  cd build

  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE='Release' \
    -DCMAKE_INSTALL_PREFIX='/usr'\
    -DENABLE_VISUALISATIONS=OFF \
    -DENABLE_SPOTIFY_BLOB=OFF \
    -DENABLE_SPOTIFY=OFF \
    -DENABLE_SKYDRIVE=OFF \
    -DENABLE_GOOGLE_DRIVE=OFF \
    -DENABLE_DROPBOX=OFF \
    -DENABLE_UBUNTU_ONE=OFF \
    -DENABLE_LIBGPOD=OFF \
    -DENABLE_WIIMOTEDEV=OFF \
    -DENABLE_SPARKLE=OFF \
    -DENABLE_LIBMTP=OFF \
    -DENABLE_GIO=OFF \
    -DENABLE_BOX=OFF \
    -DENABLE_DEVICEKIT=OFF \
    -DENABLE_LIBLASTFM=OFF \
    -DENABLE_MOODBAR=OFF   \
    -DENABLE_AUDIOCD=OFF    \
    -DENABLE_DEVICEKIT=OFF    \
    -DENABLE_AMAZON_CLOUD_DRIVE=OFF    \
    -DENABLE_BREAKPAD=OFF    \
    -DENABLE_SEAFILE=OFF    \
    -DENABLE_UDISK2=OFF    \
    -DENABLE_VK=OFF    \
    -DENABLE_SPARKLE=OFF 

  make
}

package() {
  make DESTDIR="$pkgdir" -C build install
}
